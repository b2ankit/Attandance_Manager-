<%-include('header')%>
    <section>
        <div class="container" style="margin-top: 10vh;">
            <div class="signup-form">
                    <form action="/signup" method="post" role="form" enctype="multipart/form-data">
                        <h2>Register</h2>
                        <p class="hint-text">Create your account. It's free and only takes a minute.</p>
                        <div class="form-group">
                            <input type="name" class="form-control" name="name" placeholder="Enter name" required="required">
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" name="email" placeholder="Email" required="required">
                        </div>
                        <div class="form-group">
                            <input type="password" class="form-control" name="password" placeholder="Password" required="required">
                        </div>
                        <div class="form-group">
                          <input type="file" class="form-control" name="file" placeholder="upload image" required="required">
                        </div>
                        <div class="form-group">
                            <label class="checkbox-inline">Already have Account? <a href="/login">Login</a> </label>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-lg btn-block">Register Now</button>
                        </div>
                    </form>
             </div>
          </div>
    </section>
<%-include('footer')%>
