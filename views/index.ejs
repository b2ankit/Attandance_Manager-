<%-include('header')%>

    <section>
      <div class="container" style="margin-top: 15vh;">
        <table class="table table-striped table-bordered table-hover" style="text-align: center;">
          <thead">
            <tr  style="background-color: rgb(36, 31, 31); color: white; ">
              <th style="text-align: center; padding: 10px;">Subject Name</th>
              <th style="text-align: center; padding: 10px;">Total Present</th> 
              <th style="text-align: center; padding: 10px;">Total Absent</th>
              <th style="text-align: center; padding: 10px;">Precentage</th>
              <th style="text-align: center; padding: 10px;">Present</th>
              <th style="text-align: center; padding: 10px;">Absent</th> 
              
              <th style="text-align: center; padding: 10px;">Action</th>
            </tr>
          </thead>
          <tbody>
            <% records.forEach(function(row) {%>
              <% if(row.percentage < 75){%>
                <tr style="color: red;">  
                  <td><%=row.subject%></td>
                  <td><%=row.present%></td>
                  <td><%=row.absent%></td>
                  <td ><%=row.percentage%>%</td>
                  <td><a class="btn btn-success btn-xs" href="/present/<%=row._id%>"><i class="fa fa-plus"></i></a></td>
                  <td><a class="btn btn-danger btn-xs" href="/absent/<%=row._id%>"><i class="fa fa-plus"></i></a></td>
                  <td><a class="btn btn-primary btn-xs" href="/edit/<%=row._id%>"><i class="fa fa-edit"></i></a>
                  <a class="btn btn-danger btn-xs" href="/delete/<%=row._id%>"><i class="fa fa-trash"></i></a></td>
                </tr>
                
                <%}else{%>
                <tr>  
                  <td><%=row.subject%></td>
                  <td><%=row.present%></td>
                  <td><%=row.absent%></td>
                  <td ><%=row.percentage%>%</td>
                  <td><a class="btn btn-success btn-xs" href="/present/<%=row._id%>"><i class="fa fa-plus"></i></a></td>
                  <td><a class="btn btn-danger btn-xs" href="/absent/<%=row._id%>"><i class="fa fa-plus"></i></a></td>
                  <td><a class="btn btn-primary btn-xs" href="/edit/<%=row._id%>"><i class="fa fa-edit"></i></a>
                  <a class="btn btn-danger btn-xs" href="/delete/<%=row._id%>"><i class="fa fa-trash"></i></a></td>
                </tr>
             <%}})%>  
          </tbody>
        </table>  
      </div>
    </section>

<%-include('footer')%>
